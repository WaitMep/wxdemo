/* pages/book/book.wxss */
.fixBox {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  
  background: #fff;
  width: 750rpx;
  height: 100rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  border: 1rpx solid #f7f7f7;
}

.searchBar {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 68rpx;
  border-radius: 30rpx;
  background: #f7f7f7;
  font-size: 28rpx;
  color: #999;
}

.searchBar > image {
  margin-left: 260rpx;
  width: 28rpx;
  height: 28rpx;
}

.search text {
  padding-left: 10rpx;
}
.booksWrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f9f9f9;
  padding-top: 108rpx;
}
.booksWrap > image {
  width: 107rpx;
  height: 32rpx;
  margin: 40rpx 0 25rpx 0;
  flex-wrap: wrap; 
}
/* bookItems */
.booksItem {
  display: flex;
  flex-wrap: wrap;
  padding: 0 90rpx;
  justify-content: space-between;
  margin-top: 25rpx;
}