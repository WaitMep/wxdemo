/* components/main/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.post {
  position: relative;
}
.post > .postContainer {
  width: 750rpx;
  height: 500rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.post > .postContainer > .musicPostImg {
  width: 442rpx;
  height: 424rpx;
  border-radius: 50%;
  box-shadow: 10rpx 10rpx 10rpx #e9e9e9;
}
.post > .postContainer > .postImg {
  width: 750rpx;
  height: 500rpx;
}

.post > .postContainer > .musicImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  margin-top: -60rpx;
}
.post >.smallImg {
  width: 46rpx;
  height: 142rpx;
  display: block;
  position: absolute;
  bottom: -80rpx;
  left: 29rpx;
}

/* movie and poem */


.description {
  display: flex;
  justify-content: center;
  width: 558rpx;
  height: 83rpx;
  margin-top: 119rpx;
  font-size: 34rpx;
  color: #0f0f0f;
}