/* search-bar */
.search-bar {
  position: fixed;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid #f7f7f7;
  background: #fff;
  z-index: 99;
}
.input {
  margin: 10rpx 40rpx 10rpx 20rpx;
  padding: 10rpx;
  display: flex;
  width: 560rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #f7f7f7;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.input input {
  width: 450rpx;
}
.search-bar image {
  width: 28rpx;
  height: 28rpx;
}

.searching-container {
  width: 710rpx;
  padding: 0 20rpx;
  padding-top: 100rpx;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  background: #fff;
}

/* history-hot-search */
.history-hot-search {
  width: 750rpx;
  display: flex;
  margin:40rpx 0;
  flex-direction: column;
}

.title {
  font-size: 32rpx;
  color: #000;
  border-left: solid 4px #000;
  padding-left: 20rpx; 
}

.tags {
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
  margin: 20rpx 20rpx 0 20rpx;
}

.tag {
  margin-right: 10rpx;
}

/* booksWrap */
.booksWrap {
  padding: 0 30rpx;
  padding-top: 110rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.empty {
  margin: 40rpx 20rpx 20rpx 20rpx;
  font-size: 28rpx;
  color: #bbb;
}