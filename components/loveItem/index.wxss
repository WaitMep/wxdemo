
.container {
  width: 330rpx;
  height: 500rpx;
  background: #fff;
}

.header {
  display: flex;
  width: 100%;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
}

.header > text {
  font-size: 24rpx;
  color: #0f0f0f;
  line-height: 24rpx;
  padding: 9rpx 14rpx;
  margin-left: 21rpx;
  background: #f7f7f7;
}

.love {
  margin-right: 21rpx;
}

/* main */
.main {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main .no-music {
  width: 330rpx;
  height: 240rpx;
}
.main .music {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}
.main text {
  font-size: 28rpx;
  color: #999;
  padding: 41rpx 24rpx 0 21rpx;
}
